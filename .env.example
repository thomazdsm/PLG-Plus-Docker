# ==========================================
# CONFIGURAÇÕES GERAIS
# ==========================================
# Define o prefixo dos containers (ex: monitoramento-grafana)
COMPOSE_PROJECT_NAME=monitoramento

# ==========================================
# GRAFANA (Visualização)
# ==========================================
GRAFANA_VERSION=latest
# Porta externa para acesso ao painel
GRAFANA_PORT=3000
# Credenciais iniciais de administrador
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_me_please

# ==========================================
# PROMETHEUS (Métricas)
# ==========================================
PROMETHEUS_VERSION=latest
# Tempo de retenção das métricas (dias, horas, etc)
# Cuidado: mais tempo = mais espaço em disco na VPS
PROMETHEUS_RETENTION=30d

# ==========================================
# LOKI & PROMTAIL (Logs)
# ==========================================
# É recomendado manter Loki e Promtail na mesma versão
LOKI_VERSION=2.9.2
PROMTAIL_VERSION=2.9.2

# ==========================================
# EXPORTERS (Agentes)
# ==========================================
NODE_EXPORTER_VERSION=latest
CADVISOR_VERSION=latest